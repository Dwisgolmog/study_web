    <h1>Hello Eidt</h1>
    <div class="container mt-4">
      <form action="/edit?_method=PUT" method="POST">
        <div class="form-group">
          <label>할 일</label>
          <!-- data의 id를 서버에 보내기 위한 input 태그(사용자에게는 보이지 않게함)-->
          <input type="text" value="<%= data._id %>" name="id" style="display: none;">
          <input value="<%= data.제목 %>" type="text" class="form-control" name="title">
        </div>
        <div class="form-group">
          <label>Due data</label>
          <input value="<%= data.날짜 %>" type="text" class="form-control" name="date">
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
      </form>
    </div>

    

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
